{
  "manifest_version": 3,
  "name": "EchoCoach",
  "description": "Offline AI public speaking coach powered by Gemini Nano",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EchoCoach - Your AI Speaking Coach"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }

}
